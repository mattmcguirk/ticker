<div class="row">
  <div class="timer" id="timer1">
    <div class="time">
      <span class="minutes">00</span>' 
      <span class="seconds">00</span>"
    </div>
  
    <div class="description">
      <textarea rows="3" placeholder="What are you working on?"></textarea>
    </div>
    
    <div class="controls">
      <button id="start">Start</button> 
      <button id="pause">Pause</button>
      <button id="finish">Finish Task</button>
    </div>
  </div>
</div>