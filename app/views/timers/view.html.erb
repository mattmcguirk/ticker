<div class="row">
  <div class="timer" id="timer1">
    <div class="time col-sm-6 col-sm-offset-2">
      <span class="minutes">0</span>'
      <span class="seconds">00</span>"
    </div>
  
    <div id="description" class="col-sm-4">
      <textarea rows="3" placeholder="What are you working on?"></textarea>
    </div>
    
    <div class="controls col-sm-12 center">
      <button id="start">Start</button> 
      <button id="pause">Pause</button>
      <button id="finish">Finish Task</button>
    </div>
  </div>
</div>

<div class="row">
  <div id="task-log">
    <h3>Task Log</h3>
    <ul></ul>
  </div>
</div>