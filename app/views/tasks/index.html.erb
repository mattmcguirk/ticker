<% currentDate = "" %> 
<div class="row">
  <h3 class="center">Task Log</h3>
  <% if @tasks.empty? %> 
  <div class="message center">
    No tasks yet. Get to work!
  </div>
  <% end %>
  <div class="col-sm-6 col-sm-offset-3">
    <table id="task-log">
      <tbody>
      <% @tasks.each do |t| %> 
        <% if t.created_at.strftime('%A, %B %d %Y') != currentDate %>
          <tr class="date-header">
            <td colspan="3"><%= t.created_at.strftime('%A, %B %d, %Y') %></td>
          </tr>
          <tr class="header">
            <td></td>
            <td class="time-elapsed">Time</td>
            <td class="task">Task</td>
          </tr>
          <% currentDate = t.created_at.strftime('%A, %B %d %Y') %>
        <% end %>
        <tr>
          <td class="controls">
            <%= link_to t, method: :delete, class: "delete" do %>
            <span class='glyphicon glyphicon-remove' aria-hidden='true'></span>
            <% end %> 
            </a>
          </td>
          <td class="time-elapsed"><%= seconds_to_s(t.time) %></td>
          <td class="task"><%= t.description %></td>
        </tr>  
      <% end %>   
      </tbody>
    </table>
  </div>
</div>